{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <div class="container-fluid " id="show-event">
        <div class="row">

            <div class="col-lg-2">
                {% include('nav-left.html.twig') %}
            </div>

            <div class="col-lg-10 show-event">
                <h4>Calendrier</h4>

                {#Back to events#}
                <a class="btn-dark btn" href="{{ path('event_index') }}">Événements</a>

                {#Infos event#}
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ calendar.title }}</td>
                    </tr>
                    <tr>
                        <th>Début</th>
                        <td>{{ calendar.start ? calendar.start|date('d-m-y h:m')}}</td>
                    </tr>
                    <tr>
                        <th>Fin</th>
                        <td>{{ calendar.end ? calendar.end|date('d-m-y h:m') }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ calendar.description }}</td>
                    </tr>
                    <tr>
                        <th>Toute le journéé</th>
                        <td>{{ calendar.allDay ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>

                {#Actions#}
                <div class="show-btn">
                    <a class="btn-secondary btn" href="{{ path('event_edit', {'id': calendar.id}) }}">Modifier</a>
                    {{ include('event/_delete_form.html.twig') }}
                </div>

                {# Invite users to event#}
                <div class="invite">
                    <form action="{{ path('event_invite', {'id': calendar.id}) }}" method="post">
                        <label for="email"></label>
                        <input class="form-control" name="email" type="email"  value="Email">
                        <input name="idevent" type="hidden" value="{{ calendar.id }}">
                        <button class="btn-dark btn">Inviter</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
