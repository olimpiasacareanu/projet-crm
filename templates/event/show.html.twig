{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <div class="container-fluid " id="show-event">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-12">
                {% include('nav-left.html.twig') %}
            </div>
            <div class="col-lg-10 col-md-10 col-sm-12 show-event">
                <h4>Calendrier</h4>
                <a class="btn btn-secondary" href="{{ path('event_index') }}">Les évènements</a>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ calendar.title }}</td>
                    </tr>
                    <tr>
                        <th>Début</th>
                        <td>{{ calendar.start ? calendar.start|date('H:i d-m-y ') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fin</th>
                        <td>{{ calendar.end ? calendar.end|date('H:i d-m-y ') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ calendar.description }}</td>
                    </tr>
                    <tr>
                        <th>Toute le journéé</th>
                        <td>{{ calendar.allDay ? 'Yes' : 'No' }}</td>
                    </tr>

                    </tbody>
                </table>

                <div class="show-btn">
                    <a class="btn btn-secondary" href="{{ path('event_edit', {'id': calendar.id}) }}">Modifier</a>
                    {{ include('event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
