{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Edit Calendar{% endblock %}

{% block body %}
    <div class="container-fluid" id="edit-event">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-12">
                {% include('nav-left.html.twig') %}
            </div>
            <div class="col-lg-10 col-md-10 col-sm-12 edit-event">
                <h4>Edit Calendar</h4>

                <a class="btn-dark btn" href="{{ path('event_index') }}">Les évenements</a>

                <div class="edit-btn">
                    <div class="edit-update">
                        {{ include('event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                    <div class="edit-delete">
                        {{ include('event/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
