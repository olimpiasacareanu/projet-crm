{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
    <div class="container-fluid index-calendar">
        <div class="row">

            <div class="col-lg-2">
                {% include('nav-left.html.twig') %}
            </div>

            <div class="col-lg-10 events">
                <h4>Calendar index</h4>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Début</th>
                        <th>Fin</th>
                        <th>Description</th>
                        <th>Toute la journée</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.title }}</td>
                            <td>{{ event.start ? event.start|date('d/m/y h:m') : '' }}</td>
                            <td>{{ event.end ? event.end|date('d/m/y h:m') : '' }}</td>
                            <td>{{ event.description }}</td>
                            <td>{{ event.allDay ? 'Oui' : 'Non' }}</td>
                            <td>
                                <a href="{{ path('event_show', {'id': event.id}) }}"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('event_edit', {'id': event.id}) }}"><i class="fas fa-pen-square"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">Pas des évènements enregistrés</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a class="btn btn-secondary" href="{{ path('event_new') }}">Créer un évènement</a>
            </div>
        </div>
    </div>

{% endblock %}
