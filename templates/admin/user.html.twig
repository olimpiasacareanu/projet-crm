{% extends 'base.html.twig' %}

{%  block title %}Admin {% endblock %}

{%  block body %}
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-2 col-md-2 col-sm-12">
                {% include('nav-left.html.twig') %}
            </div>

            <div class="col-lg-10 col-md-10 col-sm-12 admin">

                <h4>Liste des utilisateurs</h4>

                {#Display user's roles#}
                <table>
                    <thead>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                    </thead>
                    <tbody>

                    {% for user in users %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>

                                {% for role in user.roles %}
                                    {% if role == "ROLE_USER" %}
                                        Utilisateur /
                                    {%  elseif role == "ROLE_ADMIN" %}
                                        Administrateur /
                                    {% endif %}
                                {% endfor %}

                            </td>
                            <td><a class="btn-secondary btn" href="{{ path('admin_modifier', {'id':user.id}) }}">Modifier</a></td>
                        </tr>
                    {% else %}

                        <tr>
                            <td>Il n\'y pas d\'utilisateur inscrit</td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}